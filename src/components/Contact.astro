<section id="contact" class="bg-white section-spacing">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <span class="text-forest-green uppercase tracking-wider text-sm font-medium mb-4 block">
        Get In Touch
      </span>
      <h2 class="section-heading mb-6">
        Ready to Discover Something Unique?
      </h2>
      <p class="body-text max-w-2xl mx-auto">
        Whether you're a collector looking for that perfect piece or interested in partnering with us, we'd love to hear from you.
      </p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      
      <!-- Contact Form -->
      <div class="lg:col-span-2">
        <div class="bg-cream rounded-2xl p-8">
          <h3 class="text-2xl font-serif text-burgundy mb-6">Send us a message</h3>
          
          <form id="contact-form" class="space-y-6" action="#" method="POST">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="first-name" class="block text-sm font-medium text-warm-gray mb-2">
                  First Name *
                </label>
                <input 
                  type="text" 
                  id="first-name" 
                  name="first-name" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-forest-green focus:border-transparent transition-all"
                />
                <div class="error-message text-red-600 text-sm mt-1 hidden"></div>
              </div>
              
              <div>
                <label for="last-name" class="block text-sm font-medium text-warm-gray mb-2">
                  Last Name *
                </label>
                <input 
                  type="text" 
                  id="last-name" 
                  name="last-name" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-forest-green focus:border-transparent transition-all"
                />
                <div class="error-message text-red-600 text-sm mt-1 hidden"></div>
              </div>
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-warm-gray mb-2">
                Email Address *
              </label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-forest-green focus:border-transparent transition-all"
              />
              <div class="error-message text-red-600 text-sm mt-1 hidden"></div>
            </div>
            
            <div>
              <label for="subject" class="block text-sm font-medium text-warm-gray mb-2">
                Subject
              </label>
              <select 
                id="subject" 
                name="subject"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-forest-green focus:border-transparent transition-all"
              >
                <option value="">Select a topic...</option>
                <option value="partnership">Partnership Inquiry</option>
                <option value="brickheads">Brickheads Toy Co.</option>
                <option value="snackhaus">Snackhaus</option>
                <option value="general">General Question</option>
                <option value="support">Customer Support</option>
              </select>
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-warm-gray mb-2">
                Message *
              </label>
              <textarea 
                id="message" 
                name="message" 
                required
                rows="5"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-forest-green focus:border-transparent transition-all resize-vertical"
                placeholder="Tell us about your inquiry..."
              ></textarea>
              <div class="error-message text-red-600 text-sm mt-1 hidden"></div>
            </div>
            
            <button 
              type="submit" 
              class="btn-primary w-full md:w-auto"
              id="submit-btn"
            >
              Send Message
            </button>
            
            <div id="form-status" class="text-sm hidden">
              <div id="success-message" class="text-green-600 hidden">
                ‚úì Thank you! Your message has been sent successfully.
              </div>
              <div id="error-message" class="text-red-600 hidden">
                ‚úó There was an error sending your message. Please try again.
              </div>
            </div>
          </form>
        </div>
      </div>
      
      <!-- Contact Info -->
      <div class="space-y-8">
        <!-- Contact Details -->
        <div class="bg-cream rounded-2xl p-8">
          <h3 class="text-xl font-serif text-burgundy mb-6">Contact Information</h3>
          
          <div class="space-y-4">
            <div class="flex items-start">
              <span class="text-forest-green mr-3 mt-1">üìß</span>
              <div>
                <div class="font-medium text-warm-gray">Email</div>
                <a href="mailto:hello@obscuracommerce.com" class="text-forest-green hover:text-burgundy transition-colors">
                  hello@obscuracommerce.com
                </a>
              </div>
            </div>
            
            <div class="flex items-start">
              <span class="text-forest-green mr-3 mt-1">üìû</span>
              <div>
                <div class="font-medium text-warm-gray">Phone</div>
                <a href="tel:+1-555-OBSCURA" class="text-forest-green hover:text-burgundy transition-colors">
                  +1 (555) OBSCURA
                </a>
              </div>
            </div>
            
            <div class="flex items-start">
              <span class="text-forest-green mr-3 mt-1">‚è∞</span>
              <div>
                <div class="font-medium text-warm-gray">Business Hours</div>
                <div class="text-sm text-warm-gray space-y-1">
                  <div>Monday - Friday: 9AM - 6PM ET</div>
                  <div>Saturday: 10AM - 4PM ET</div>
                  <div>Sunday: Closed</div>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Quick Links -->
        <div class="bg-white border-2 border-forest-green rounded-2xl p-8">
          <h3 class="text-xl font-serif text-burgundy mb-6">Quick Actions</h3>
          
          <div class="space-y-4">
            <a href="/#brands" class="block w-full text-center bg-forest-green text-white py-3 px-4 rounded-lg hover:bg-dark-green transition-colors">
              Explore Our Brands
            </a>
            <a href="mailto:partnerships@obscuracommerce.com" class="block w-full text-center border-2 border-forest-green text-forest-green py-3 px-4 rounded-lg hover:bg-forest-green hover:text-white transition-colors">
              Partnership Inquiry
            </a>
          </div>
        </div>
        
        <!-- Response Time -->
        <div class="bg-white rounded-2xl p-6 text-center shadow-lg">
          <div class="text-2xl font-bold text-forest-green mb-2">24h</div>
          <div class="text-sm uppercase tracking-wider text-warm-gray">Average Response Time</div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById('contact-form');
  const submitBtn = document.getElementById('submit-btn');
  const formStatus = document.getElementById('form-status');
  const successMessage = document.getElementById('success-message');
  const errorMessage = document.getElementById('error-message');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // Show loading state
    submitBtn!.textContent = 'Sending...';
    submitBtn!.disabled = true;
    
    // Hide previous status messages
    formStatus?.classList.add('hidden');
    successMessage?.classList.add('hidden');
    errorMessage?.classList.add('hidden');
    
    try {
      // Simulate form submission
      await new Promise(resolve => setTimeout(resolve, 1000));
      
      // Show success message
      formStatus?.classList.remove('hidden');
      successMessage?.classList.remove('hidden');
      
      // Reset form
      form.reset();
      
    } catch (error) {
      // Show error message
      formStatus?.classList.remove('hidden');
      errorMessage?.classList.remove('hidden');
    } finally {
      // Reset button
      submitBtn!.textContent = 'Send Message';
      submitBtn!.disabled = false;
    }
  });
</script>