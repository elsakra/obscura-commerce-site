<section id="contact" class="bg-white section-spacing">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <span class="text-forest-green uppercase tracking-wider text-sm font-medium mb-4 block">
        Get In Touch
      </span>
      <h2 class="section-heading mb-6">
        Ready to Discover Something Unique?
      </h2>
      <p class="body-text max-w-2xl mx-auto">
        Whether you're a collector looking for that perfect piece or interested in partnering with us, we'd love to hear from you.
      </p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      
      <!-- Contact Form -->
      <div class="lg:col-span-2">
        <div class="bg-cream rounded-2xl p-8">
          <h3 class="text-2xl font-serif text-burgundy mb-6">Send us a message</h3>
          
          <form id="contact-form" class="space-y-6" action="#" method="POST">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="first-name" class="block text-sm font-medium text-warm-gray mb-2">
                  First Name *
                </label>
                <input 
                  type="text" 
                  id="first-name" 
                  name="first-name" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-forest-green focus:border-transparent transition-all"
                />
                <div class="error-message text-red-600 text-sm mt-1 hidden"></div>
              </div>
              
              <div>
                <label for="last-name" class="block text-sm font-medium text-warm-gray mb-2">
                  Last Name *
                </label>
                <input 
                  type="text" 
                  id="last-name" 
                  name="last-name" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-forest-green focus:border-transparent transition-all"
                />
                <div class="error-message text-red-600 text-sm mt-1 hidden"></div>
              </div>
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-warm-gray mb-2">
                Email Address *
              </label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-forest-green focus:border-transparent transition-all"
              />
              <div class="error-message text-red-600 text-sm mt-1 hidden"></div>
            </div>
            
            <div>
              <label for="subject" class="block text-sm font-medium text-warm-gray mb-2">
                Subject
              </label>
              <select 
                id="subject" 
                name="subject"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-forest-green focus:border-transparent transition-all"
              >
                <option value="general">General Inquiry</option>
                <option value="partnership">Partnership Opportunity</option>
                <option value="brickheads">Brickheads Toy Co.</option>
                <option value="snackhaus">Snackhaus</option>
                <option value="other">Other</option>
              </select>
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-warm-gray mb-2">
                Message *
              </label>
              <textarea 
                id="message" 
                name="message" 
                rows="5" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-forest-green focus:border-transparent transition-all resize-none"
                placeholder="Tell us about what you're looking for or how we can help..."
              ></textarea>
              <div class="error-message text-red-600 text-sm mt-1 hidden"></div>
            </div>
            
            <div id="form-status" class="hidden">
              <div id="success-message" class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded hidden">
                Thank you! Your message has been sent successfully. We'll get back to you soon.
              </div>
              <div id="error-message" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded hidden">
                Sorry, there was an error sending your message. Please try again.
              </div>
            </div>
            
            <button 
              type="submit" 
              class="btn-primary w-full text-center"
            >
              Send Message
            </button>
          </form>
        </div>
      </div>
      
      <!-- Contact Info -->
      <div class="space-y-8">
        <!-- Direct Contact -->
        <div class="bg-forest-green text-white rounded-2xl p-8">
          <h3 class="text-xl font-serif text-white mb-6">Contact Information</h3>
          
          <div class="space-y-6">
            <div>
              <h4 class="font-semibold mb-2">Email</h4>
              <a href="mailto:hello@obscuracommerce.com" class="text-gray-200 hover:text-white transition-colors">
                hello@obscuracommerce.com
              </a>
            </div>
            
            <div>
              <h4 class="font-semibold mb-2">Phone</h4>
              <a href="tel:+1-555-OBSCURA" class="text-gray-200 hover:text-white transition-colors">
                +1 (555) OBSCURA
              </a>
            </div>
            
            <div>
              <h4 class="font-semibold mb-2">Address</h4>
              <address class="text-gray-200 not-italic">
                123 Collector's Lane<br>
                Cultural District<br>
                New York, NY 10001
              </address>
            </div>
          </div>
        </div>
        
        <!-- Business Hours -->
        <div class="bg-cream rounded-2xl p-8">
          <h3 class="text-xl font-serif text-burgundy mb-6">Business Hours</h3>
          
          <div class="space-y-3 text-warm-gray">
            <div class="flex justify-between">
              <span>Monday - Friday</span>
              <span>9:00 AM - 6:00 PM</span>
            </div>
            <div class="flex justify-between">
              <span>Saturday</span>
              <span>10:00 AM - 4:00 PM</span>
            </div>
            <div class="flex justify-between">
              <span>Sunday</span>
              <span>Closed</span>
            </div>
            <div class="text-sm text-gray-500 mt-4">
              All times are Eastern Time (ET)
            </div>
          </div>
        </div>
        
        <!-- Quick Links -->
        <div class="bg-white border-2 border-forest-green rounded-2xl p-8">
          <h3 class="text-xl font-serif text-burgundy mb-6">Quick Links</h3>
          
          <div class="space-y-4">
            <a href="/#brands" class="block text-warm-gray hover:text-forest-green transition-colors">
              → Our Brands
            </a>
            <a href="/#about" class="block text-warm-gray hover:text-forest-green transition-colors">
              → About Us
            </a>
            <div class="pt-4 border-t border-gray-200">
              <p class="text-sm text-gray-500">
                Response time: Within 24 hours
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Form validation and submission
  const form = document.getElementById('contact-form');
  const formStatus = document.getElementById('form-status');
  const successMessage = document.getElementById('success-message');
  const errorMessage = document.getElementById('error-message');

  form?.addEventListener('submit', function(e) {
    e.preventDefault();
    
    // Clear previous errors
    const errorDivs = form.querySelectorAll('.error-message');
    errorDivs.forEach(div => {
      div.classList.add('hidden');
      div.textContent = '';
    });
    
    // Reset input styles
    const inputs = form.querySelectorAll('input, textarea, select');
    inputs.forEach(input => {
      input.classList.remove('border-red-500', 'border-green-500');
    });
    
    // Validate form
    let hasErrors = false;
    const formData = new FormData(form);
    
    // Check required fields
    const firstName = formData.get('first-name');
    const lastName = formData.get('last-name');
    const email = formData.get('email');
    const message = formData.get('message');
    
    if (!firstName?.trim()) {
      showFieldError('first-name', 'First name is required');
      hasErrors = true;
    }
    
    if (!lastName?.trim()) {
      showFieldError('last-name', 'Last name is required');
      hasErrors = true;
    }
    
    if (!email?.trim()) {
      showFieldError('email', 'Email is required');
      hasErrors = true;
    } else if (!isValidEmail(email)) {
      showFieldError('email', 'Please enter a valid email address');
      hasErrors = true;
    }
    
    if (!message?.trim()) {
      showFieldError('message', 'Message is required');
      hasErrors = true;
    } else if (message.trim().length < 10) {
      showFieldError('message', 'Message must be at least 10 characters');
      hasErrors = true;
    }
    
    if (hasErrors) {
      return;
    }
    
    // Show success state (in real app, this would submit to server)
    showSuccess();
    form.reset();
  });
  
  function showFieldError(fieldName: string, message: string) {
    const field = document.getElementById(fieldName);
    const errorDiv = field?.parentElement?.querySelector('.error-message');
    
    if (field && errorDiv) {
      field.classList.add('border-red-500');
      errorDiv.textContent = message;
      errorDiv.classList.remove('hidden');
    }
  }
  
  function showSuccess() {
    formStatus?.classList.remove('hidden');
    successMessage?.classList.remove('hidden');
    errorMessage?.classList.add('hidden');
    
    // Mark successful fields
    const inputs = form?.querySelectorAll('input, textarea, select');
    inputs?.forEach(input => {
      input.classList.add('border-green-500');
    });
    
    // Hide success message after 5 seconds
    setTimeout(() => {
      formStatus?.classList.add('hidden');
      successMessage?.classList.add('hidden');
      
      // Reset field styles
      inputs?.forEach(input => {
        input.classList.remove('border-green-500');
      });
    }, 5000);
  }
  
  function isValidEmail(email: string): boolean {
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    return emailRegex.test(email);
  }
</script>