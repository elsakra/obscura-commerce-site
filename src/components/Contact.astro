<section id="contact" class="bg-white section-spacing">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <span class="text-forest-green uppercase tracking-wider text-sm font-medium mb-4 block">
        Get In Touch
      </span>
      <h2 class="section-heading mb-6">
        Ready to Discover Something Unique?
      </h2>
      <p class="body-text max-w-2xl mx-auto">
        Whether you're a collector looking for that perfect piece or interested in partnering with us, we'd love to hear from you.
      </p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      
      <!-- Contact Form -->
      <div class="lg:col-span-2">
        <div class="bg-cream rounded-2xl p-8">
          <h3 class="text-2xl font-serif text-burgundy mb-6">Send us a message</h3>
          
          <form class="space-y-6" action="#" method="POST">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="first-name" class="block text-sm font-medium text-warm-gray mb-2">
                  First Name *
                </label>
                <input 
                  type="text" 
                  id="first-name" 
                  name="first-name" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-forest-green focus:border-transparent transition-all"
                />
              </div>
              
              <div>
                <label for="last-name" class="block text-sm font-medium text-warm-gray mb-2">
                  Last Name *
                </label>
                <input 
                  type="text" 
                  id="last-name" 
                  name="last-name" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-forest-green focus:border-transparent transition-all"
                />
              </div>
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-warm-gray mb-2">
                Email Address *
              </label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-forest-green focus:border-transparent transition-all"
              />
            </div>
            
            <div>
              <label for="subject" class="block text-sm font-medium text-warm-gray mb-2">
                Subject
              </label>
              <select 
                id="subject" 
                name="subject"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-forest-green focus:border-transparent transition-all"
              >
                <option value="">Select a topic...</option>
                <option value="brickheads">Brickheads Toy Co. Inquiry</option>
                <option value="snackhaus">Snackhaus Inquiry</option>
                <option value="partnership">Partnership Opportunity</option>
                <option value="general">General Question</option>
                <option value="other">Other</option>
              </select>
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-warm-gray mb-2">
                Message *
              </label>
              <textarea 
                id="message" 
                name="message" 
                rows="5" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-forest-green focus:border-transparent transition-all resize-vertical"
                placeholder="Tell us about what you're looking for or how we can help..."
              ></textarea>
            </div>
            
            <div>
              <button type="submit" class="btn-primary w-full md:w-auto">
                Send Message
              </button>
            </div>
          </form>
        </div>
      </div>
      
      <!-- Contact Information -->
      <div class="space-y-8">
        
        <!-- Contact Cards -->
        <div class="bg-forest-green rounded-2xl p-8 text-white">
          <h3 class="text-xl font-serif mb-6">Connect With Our Brands</h3>
          
          <div class="space-y-6">
            <div>
              <h4 class="font-semibold text-lg mb-2">Brickheads Toy Co.</h4>
              <p class="text-gray-200 text-sm leading-relaxed">
                For exclusive LEGO¬Æ collections and rare collectible toys. Perfect for serious builders and collectors.
              </p>
            </div>
            
            <div>
              <h4 class="font-semibold text-lg mb-2">Snackhaus</h4>
              <p class="text-gray-200 text-sm leading-relaxed">
                Discover rare international snacks and treats from around the world that you won't find in stores.
              </p>
            </div>
          </div>
        </div>
        
        <!-- Info Card -->
        <div class="bg-cream rounded-2xl p-8">
          <h3 class="text-xl font-serif text-burgundy mb-4">Why Choose Obscura?</h3>
          
          <ul class="space-y-3 text-sm text-warm-gray">
            <li class="flex items-start">
              <span class="text-forest-green mr-3 mt-1 text-lg">üéØ</span>
              <span>Curated by cultural enthusiasts</span>
            </li>
            <li class="flex items-start">
              <span class="text-forest-green mr-3 mt-1 text-lg">üåç</span>
              <span>Global network of unique suppliers</span>
            </li>
            <li class="flex items-start">
              <span class="text-forest-green mr-3 mt-1 text-lg">‚≠ê</span>
              <span>Exclusive access to rare items</span>
            </li>
            <li class="flex items-start">
              <span class="text-forest-green mr-3 mt-1 text-lg">ü§ù</span>
              <span>Community-driven discovery</span>
            </li>
          </ul>
        </div>
        
      </div>
    </div>
  </div>
</section>