<section id="contact" class="bg-white section-spacing">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <span class="text-forest-green uppercase tracking-wider text-sm font-medium mb-4 block">
        Get In Touch
      </span>
      <h2 class="section-heading mb-6">
        Ready to Discover Something Unique?
      </h2>
      <p class="body-text max-w-2xl mx-auto">
        Whether you're a collector looking for that perfect piece or interested in partnering with us, we'd love to hear from you.
      </p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      
      <!-- Contact Form -->
      <div class="lg:col-span-2">
        <div class="bg-cream rounded-2xl p-8">
          <h3 class="text-2xl font-serif text-burgundy mb-6">Send us a message</h3>
          
          <form id="contact-form" class="space-y-6" action="#" method="POST">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="first-name" class="block text-sm font-medium text-warm-gray mb-2">
                  First Name *
                </label>
                <input 
                  type="text" 
                  id="first-name" 
                  name="first-name" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-forest-green focus:border-transparent transition-all"
                />
                <div class="error-message text-red-600 text-sm mt-1 hidden"></div>
              </div>
              
              <div>
                <label for="last-name" class="block text-sm font-medium text-warm-gray mb-2">
                  Last Name *
                </label>
                <input 
                  type="text" 
                  id="last-name" 
                  name="last-name" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-forest-green focus:border-transparent transition-all"
                />
                <div class="error-message text-red-600 text-sm mt-1 hidden"></div>
              </div>
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-warm-gray mb-2">
                Email Address *
              </label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-forest-green focus:border-transparent transition-all"
              />
              <div class="error-message text-red-600 text-sm mt-1 hidden"></div>
            </div>
            
            <div>
              <label for="subject" class="block text-sm font-medium text-warm-gray mb-2">
                Subject
              </label>
              <select 
                id="subject" 
                name="subject"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-forest-green focus:border-transparent transition-all"
              >
                <option value="">Select a subject</option>
                <option value="general">General Inquiry</option>
                <option value="brickheads">Brickheads Toy Co.</option>
                <option value="snackhaus">Snackhaus</option>
                <option value="partnership">Partnership Opportunity</option>
                <option value="press">Press & Media</option>
                <option value="other">Other</option>
              </select>
              <div class="error-message text-red-600 text-sm mt-1 hidden"></div>
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-warm-gray mb-2">
                Message *
              </label>
              <textarea 
                id="message" 
                name="message" 
                rows="5"
                required
                placeholder="Tell us about what you're looking for or how we can help..."
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-forest-green focus:border-transparent transition-all resize-vertical"
              ></textarea>
              <div class="error-message text-red-600 text-sm mt-1 hidden"></div>
            </div>
            
            <div class="flex items-start">
              <input 
                type="checkbox" 
                id="newsletter" 
                name="newsletter"
                class="mt-1 h-4 w-4 text-forest-green focus:ring-forest-green border-gray-300 rounded"
              />
              <label for="newsletter" class="ml-3 text-sm text-warm-gray">
                I'd like to receive updates about new products and exclusive finds from our brands.
              </label>
            </div>
            
            <div class="pt-4">
              <button 
                type="submit" 
                class="btn-primary w-full md:w-auto hover:bg-dark-green focus:ring-4 focus:ring-forest-green/20 disabled:opacity-50 disabled:cursor-not-allowed"
                id="submit-btn"
              >
                <span class="submit-text">Send Message</span>
                <span class="loading-text hidden">Sending...</span>
              </button>
            </div>
            
            <!-- Success/Error Messages -->
            <div id="form-success" class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded hidden">
              <p class="font-medium">Message sent successfully!</p>
              <p class="text-sm">We'll get back to you within 24 hours.</p>
            </div>
            
            <div id="form-error" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded hidden">
              <p class="font-medium">There was an error sending your message.</p>
              <p class="text-sm">Please try again or contact us directly at hello@obscuracommerce.com</p>
            </div>
          </form>
        </div>
      </div>
      
      <!-- Contact Info -->
      <div class="space-y-8">
        <!-- Contact Details -->
        <div class="bg-forest-green text-white rounded-2xl p-8">
          <h3 class="text-xl font-serif mb-6">Get in touch</h3>
          <div class="space-y-4">
            <div class="flex items-start">
              <span class="mr-3 mt-1">üìß</span>
              <div>
                <p class="font-medium">Email</p>
                <a href="mailto:hello@obscuracommerce.com" class="text-cream hover:text-white transition-colors">
                  hello@obscuracommerce.com
                </a>
              </div>
            </div>
            
            <div class="flex items-start">
              <span class="mr-3 mt-1">üìû</span>
              <div>
                <p class="font-medium">Phone</p>
                <a href="tel:+1-555-OBSCURA" class="text-cream hover:text-white transition-colors">
                  +1 (555) OBSCURA
                </a>
              </div>
            </div>
            
            <div class="flex items-start">
              <span class="mr-3 mt-1">‚è∞</span>
              <div>
                <p class="font-medium mb-1">Business Hours</p>
                <div class="text-sm text-cream space-y-1">
                  <p>Mon-Fri: 9AM-6PM ET</p>
                  <p>Sat: 10AM-4PM ET</p>
                  <p>Sun: Closed</p>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- FAQ -->
        <div class="bg-cream rounded-2xl p-8">
          <h3 class="text-xl font-serif text-burgundy mb-6">Quick Answers</h3>
          <div class="space-y-4 text-sm">
            <div>
              <p class="font-medium text-burgundy mb-1">Looking for specific LEGO¬Æ sets?</p>
              <p class="text-warm-gray">Mention "Brickheads" in your subject and tell us what you're hunting for.</p>
            </div>
            
            <div>
              <p class="font-medium text-burgundy mb-1">Want rare international snacks?</p>
              <p class="text-warm-gray">Choose "Snackhaus" and let us know your flavor preferences.</p>
            </div>
            
            <div>
              <p class="font-medium text-burgundy mb-1">Interested in partnerships?</p>
              <p class="text-warm-gray">We're always open to collaborating with like-minded brands and collectors.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('contact-form') as HTMLFormElement;
    const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
    const submitText = submitBtn?.querySelector('.submit-text');
    const loadingText = submitBtn?.querySelector('.loading-text');
    const successMessage = document.getElementById('form-success');
    const errorMessage = document.getElementById('form-error');
    
    // Form validation
    function validateField(field: HTMLInputElement | HTMLTextAreaElement) {
      const errorDiv = field.parentElement?.querySelector('.error-message') as HTMLElement;
      let isValid = true;
      let errorMsg = '';
      
      // Required field validation
      if (field.hasAttribute('required') && !field.value.trim()) {
        isValid = false;
        errorMsg = 'This field is required.';
      }
      
      // Email validation
      if (field.type === 'email' && field.value.trim()) {
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(field.value.trim())) {
          isValid = false;
          errorMsg = 'Please enter a valid email address.';
        }
      }
      
      // Show/hide error message
      if (errorDiv) {
        if (isValid) {
          errorDiv.classList.add('hidden');
          field.classList.remove('border-red-500');
          field.classList.add('border-gray-300');
        } else {
          errorDiv.textContent = errorMsg;
          errorDiv.classList.remove('hidden');
          field.classList.add('border-red-500');
          field.classList.remove('border-gray-300');
        }
      }
      
      return isValid;
    }
    
    // Add real-time validation
    const requiredFields = form?.querySelectorAll('input[required], textarea[required]') as NodeListOf<HTMLInputElement | HTMLTextAreaElement>;
    requiredFields?.forEach(field => {
      field.addEventListener('blur', () => validateField(field));
      field.addEventListener('input', () => {
        if (field.classList.contains('border-red-500')) {
          validateField(field);
        }
      });
    });
    
    // Form submission
    form?.addEventListener('submit', function(e) {
      e.preventDefault();
      
      // Validate all fields
      let isFormValid = true;
      requiredFields?.forEach(field => {
        if (!validateField(field)) {
          isFormValid = false;
        }
      });
      
      if (!isFormValid) {
        return;
      }
      
      // Show loading state
      if (submitBtn && submitText && loadingText) {
        submitBtn.disabled = true;
        submitText.classList.add('hidden');
        loadingText.classList.remove('hidden');
      }
      
      // Hide previous messages
      successMessage?.classList.add('hidden');
      errorMessage?.classList.add('hidden');
      
      // Simulate form submission (replace with actual submission logic)
      setTimeout(() => {
        // Reset button state
        if (submitBtn && submitText && loadingText) {
          submitBtn.disabled = false;
          submitText.classList.remove('hidden');
          loadingText.classList.add('hidden');
        }
        
        // Show success message and reset form
        successMessage?.classList.remove('hidden');
        form.reset();
        
        // Scroll to success message
        successMessage?.scrollIntoView({ behavior: 'smooth', block: 'center' });
      }, 2000);
    });
  });
</script>